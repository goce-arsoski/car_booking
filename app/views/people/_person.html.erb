  <p class="title">
    <%= link_to person_path(person) do %>
      <span><%= "#{ person.firstname } #{ person.lastname }" %></span>
    <% end %>
  </p>
<% if local_assigns[:index] %>
  <div>
    <%= link_to 'Edit this person', edit_person_path(person), class: 'btn btn-success' %>
    <%= link_to 'Show all cars', cars_path, class: 'btn btn-success' %>
    <%= link_to "Delete", person_path(person), method: :delete, data: { confirm: "Are you sure?" },
      class: "btn btn-danger" %>
  </div>
<% else %>
  <div>
    <%= link_to 'Edit this person', edit_person_path(person), class: 'btn btn-success' %>
    <%= link_to 'Show all people', people_path, class: 'btn btn-success' %>
  </div>
<% end %>
