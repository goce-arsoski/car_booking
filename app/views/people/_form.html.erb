<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-2 col-sm-offset-8">
      <h2 class="text-center">New</h2>
      <%= form_with model: @person, local: true do |form| %>
        <div class="form-group row">
          <p>
            <%= form.label :firstname %>
            <%= form.text_field :firstname, placeholder: 'First name' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <%= form.label :lastname %>
            <%= form.text_field :lastname, placeholder: 'Last name' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <%= form.label :birthdate %>
            <%= form.date_field :birthdate, placeholder: 'Birthdate' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <%= form.submit submit %>
            <%= link_to 'Cancel', root_path, class: 'button is-light' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
