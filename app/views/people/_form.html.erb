<div class="container">
  <div class="row justify-content-center">
    <%= render 'shared/errors', object: @person %>

    <div class="col-sm-4 col-sm-offset-4">
      <%= form_with model: person, local: true do |form| %>
        <div class="form-group row text-center">
          <p>
            <%= form.label :firstname %>
            <%= form.text_field :firstname, placeholder: 'First name', class: 'text-center' %>
          </p>
        </div>
        <div class="form-group row text-center">
          <p>
            <%= form.label :lastname %>
            <%= form.text_field :lastname, placeholder: 'Last name', class: 'text-center' %>
          </p>
        </div>
        <div class="form-group row text-center">
          <p>
            <%= form.label :birthdate %>
            <%= form.date_field :birthdate, placeholder: 'Birthdate', class: 'text-center' %>
          </p>
        </div>
        <div class="form-group text-center">
          <p>
            <%= form.submit submit, class: 'btn btn-success' %>
            <%= link_to 'Cancel', people_path, class: 'btn btn-danger' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
