<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-2 col-sm-offset-8">
      <h2 class="text-center">Add a car</h2>
      <%= form_with model: @car, local: true do |form| %>
        <div class="form-group row">
          <p>
            <%= form.label :brand, class: 'col-md-auto col-form-label' %>
            <%= form.text_field :brand, class: 'form-control', placeholder: 'Car brand' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <%= form.label :plate, class: 'col-md-auto col-form-label' %>
            <%= form.text_field :plate, class: 'form-control', placeholder: 'Plate number' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <%= form.label :color, class: 'col-md-auto col-form-label' %>
            <%= form.text_field :color, class: 'form-control', placeholder: 'Insert car color' %>
          </p>
        </div>
        <div class="control">
          <p>
            <%= form.label :photo %>
            <%= form.file_field :photo, class: 'form-control' %>
          </p>
        </div>
        <div class="form-group row">
          <p>
            <% if @car.photo.attached? %>
              <%= image_tag @car.photo, style: 'width 200px; display: block' %>
            <% end %>

            <%= form.submit submit %>
            <%= link_to 'Cancel', @car, class: 'button is-light' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
